<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TypeWriterText">
        <item name="android:fontFamily">@font/veterantypewriter</item>
        <item name="android:textColor">@color/fontBlack</item>
    </style>

    <style name="TypeWriterText.JournalTabTitle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#41382f</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>

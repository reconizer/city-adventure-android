<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TypeWriterText">
        <item name="android:fontFamily">@font/veteran_typewriter</item>
        <item name="android:textColor">@color/fontDark</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/oswald_regular</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/oswald_medium</item>
    </style>

    <style name="TypeWriterText.JournalTabTitle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#41382f</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="FullScreenCustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowTransitionBackgroundFadeDuration">@android:integer/config_shortAnimTime</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullScreenCustomDialog.Loader">
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="DialogText" parent="TypeWriterText">
        <item name="android:textColor">#453c32</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DialogHeaderText" parent="TypeWriterText">
        <item name="android:textColor">@color/fontHeaderColor</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="TutorialDialogText" parent="TypeWriterText">
        <item name="android:textColor">#211d18</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ead5b6</item>
        <item name="android:paddingStart">@dimen/space_md</item>
        <item name="android:paddingEnd">@dimen/space_md</item>
        <item name="android:paddingTop">@dimen/space_sm</item>
        <item name="android:paddingBottom">@dimen/space_sm</item>
    </style>

    <style name="DialogButton.Spacious">
        <item name="android:paddingStart">@dimen/space_lg</item>
        <item name="android:paddingEnd">@dimen/space_lg</item>
    </style>

    <style name="AuthenticationButton">
        <item name="android:background">@drawable/button_authentication</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/authenticationColor</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AuthenticationInput">
        <item name="android:background">@drawable/input_authentication</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textColor">@color/authenticationColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>

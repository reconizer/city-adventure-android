<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <pl.reconizer.cityadventure.presentation.customviews.ScalableSpace
        android:id="@+id/stampSpace"
        android:layout_width="69dp"
        android:layout_height="69dp" />

    <ImageView
        android:id="@+id/stampImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rating_stamp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/stampSpace"
        app:layout_constraintTop_toTopOf="@id/stampSpace"
        app:layout_constraintEnd_toEndOf="@+id/stampSpace"
        app:layout_constraintBottom_toBottomOf="@id/stampSpace"/>

    <pl.reconizer.cityadventure.presentation.customviews.ScalableTextView
        android:id="@+id/ratingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        tools:text="4"
        android:textAlignment="gravity"
        android:textAppearance="@style/TypeWriterText"
        android:textColor="#7a3b3b"
        android:textSize="42dp"
        app:layout_constraintBottom_toBottomOf="@id/stampSpace"
        app:layout_constraintEnd_toEndOf="@+id/stampSpace"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="@id/stampSpace"
        app:layout_constraintTop_toTopOf="@id/stampSpace"
        app:layout_constraintVertical_bias="0.49" />

</androidx.constraintlayout.widget.ConstraintLayout>
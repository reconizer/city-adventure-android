<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <pl.reconizer.cityadventure.presentation.customviews.ScalableImageView
        android:id="@+id/difficultyIcon"
        android:layout_width="73dp"
        android:layout_height="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/difficulty_level_hard" />

    <pl.reconizer.cityadventure.presentation.customviews.ScalableSpace
        android:id="@+id/margin"
        android:layout_width="0dp"
        android:layout_height="7dp"
        app:layout_constraintEnd_toEndOf="@id/difficultyIcon"
        app:layout_constraintStart_toStartOf="@+id/difficultyIcon"
        app:layout_constraintTop_toBottomOf="@id/difficultyIcon" />

    <pl.reconizer.cityadventure.presentation.customviews.ScalableTextView
        android:id="@+id/difficultyLevelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textAppearance="@style/TypeWriterText"
        android:textColor="#302e2a"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/margin"
        tools:text="@string/difficulty_level_hard" />

</androidx.constraintlayout.widget.ConstraintLayout>
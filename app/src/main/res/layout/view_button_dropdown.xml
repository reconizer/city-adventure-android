<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/triggerButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_4x"
        android:background="@drawable/frame_small"
        android:stateListAnimator="@null"
        android:textAllCaps="true"
        android:textAppearance="@style/Text.Medium"
        android:textSize="14dp"
        android:paddingStart="@dimen/space_xs"
        android:paddingEnd="@dimen/space_xs"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>